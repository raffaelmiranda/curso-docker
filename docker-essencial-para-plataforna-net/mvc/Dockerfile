 #IMAGE BASE
FROM mcr.microsoft.com/dotnet/aspnet:5.0 AS base
#INFORMAÇÃO DO DOCKERFILE
LABEL version="1.0.2" description="Aplicação ASP.NET CORE MVC com Docker"
#COPIA O DIRETORIO DIST DO HOST PARA O DIRETORIO APP DO CONTAINER
COPY dist /app
#DEFINE O DIRETORIO DE TRABALHO DENTRO DO CONTAINER
WORKDIR /app
#EXPOE A PORTA 80 DO CONTAINER
EXPOSE 80/tcp
#EXECUTA O COMANDO DOTNET MVC
ENTRYPOINT ["dotnet", "mvc.dll"]




